{
  "name": "sistema-municipios",
  "version": "1.0.0",
  "description": "Sistema de Gestão CISCO",
  "main": "main.js",
  "author": "CISCO",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.cisco.gestao",
    "productName": "Gestão Municípios CISCO",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!src/*"
    ],
    "win": {
      "icon": "assets/ciscoico.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gestão CISCO"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "csv-parser": "^3.2.0",
    "nedb": "^1.8.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
